@model BookShop2021.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h2>Ваш заказ:</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input type="hidden" asp-for="Status" />
            <input type="hidden" asp-for="Date" />
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DeliveryMethod" />
            <input type="hidden" asp-for="TotalPrice" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h4> на общую сумму : @Model.TotalPrice рублей</h4>
            <br />
            <h4> будет доставлен по адресу:</h4>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <h4> Ваше имя: </h4>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Подтвердить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<form asp-action="Delete" >
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Отменить" class="btn btn-default" /> 
 </form>

<div>
    <a asp-action="Index" asp-controller="Cart">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
