@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewData["Title"] = "Index";
}

<h2>Список пользователей сайта </h2>
<br/>
<a asp-action="Create" class="btn btn-secondary">Добавить пользователя</a>
<br/>

<table class="table">
    <tr><th>Email</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@user.Id">Изменить роль</a>
                    <button type="submit" class="btn btn-sm btn-danger"> Удалить </button>
                </form>
            </td>
        </tr>
    }
</table>
