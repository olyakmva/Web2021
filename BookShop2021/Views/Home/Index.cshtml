@model IEnumerable<BookShop2021.Models.Book>

@{
    ViewData["Title"] = "Index";
}
<br/>
<div class="container">

    <div class="row  justify-content-center">
        <div class="col-10 ">
            <div id="carouselControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@Url.Content("~/images/cat.jpg")" class="d-block w-100" alt="cup">
                    </div>
                    <div class="carousel-item">
                        <img src="@Url.Content("~/images/bb.jpg")" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="@Url.Content("~/images/shelf.jpg")" class="d-block w-100" alt="...">
                    </div>

                </div>
                <a class="carousel-control-prev" href="#carouselControls" role="button"
                   data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselControls" role="button"
                   data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>

<br />


<h2>@ViewBag.Msg</h2>

@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    <label>Разделы: </label>
    @Html.DropDownList("categoryId", ViewBag.Genres as SelectList)
    <input type="submit" value="Показать" />
}

<div class="row justify-content-around row-cols-4">
    @foreach (var book in Model)
    {
        <div class="col-md-auto">
            <div class="card" style="width: 10rem;">
                <img src="@Url.Content("~/images/")@book.ImageUrl" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">@book.Price руб.</h5>
                    <p class="card-text">@book.Author <br /> @book.Name </p>
                </div>
                <div class="card-body">
                    <a asp-action="Add" asp-controller="Cart"
                       asp-route-id="@book.Id"
                       class="btn btn-secondary">В корзину</a>
                </div>
            </div>
        </div>
    }
</div>
